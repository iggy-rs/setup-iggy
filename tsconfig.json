{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}